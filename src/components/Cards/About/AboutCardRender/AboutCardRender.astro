---
import AboutCard from "@components/Cards/About/AboutCard/AboutCard.astro";
import type { Card } from "@data/about.data";

interface Props {
  cards: Card[];
}

const { cards } = Astro.props;
---

<div class="flex flex-wrap justify-center w-full p-4 gap-y-10">
  {
    cards.map((card) => (
      <AboutCard
        title={card.title}
        text={card.description}
        buttonText={card?.buttonText}
        buttonLink={card?.buttonLink}
      />
    ))
  }
</div>
