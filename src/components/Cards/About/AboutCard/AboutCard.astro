---
interface Props {
  title: string;
  text: string;
  buttonText?: string;
  buttonLink?: string;
}

const { title, text, buttonText, buttonLink } = Astro.props;
---

<div class="w-full px-2 lg:w-96">
  <div
    class="flex flex-col items-center min-h-[360px] justify-center p-5 drop-shadow-lg gap-y-6 rounded-3xl bg-primary"
  >
    <h3 class="text-3xl font-semibold text-center">{title}</h3>
    <p class="text-center max-w-72 text-pretty">{text}</p>
    {
      buttonText && buttonLink && (
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="w-[90%] py-2 text-xl font-medium text-center transition-all rounded-full bg-secondary hover:scale-105 hover:bg-secondary/90"
          href={buttonLink}
        >
          {buttonText}
        </a>
      )
    }
  </div>
</div>
