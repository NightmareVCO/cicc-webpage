---
import { Image } from "astro:assets";
import FeatureActivity from "@components/Cards/featuredActivities/FeatureActivity/FeatureActivity.astro";

import type { Activity } from "@data/activities.data.ts";

interface Props {
  activities: Activity[];
}

const { activities } = Astro.props;
---

<div class="container mx-auto px-4 mt-10">
  {
    activities.map((activity, index) => (
      <FeatureActivity index={index} activity={activity} />
    ))
  }
</div>
