---
import DirectiveCard from "@components/Cards/Directive/DirectiveCard/DirectiveCard.astro";
import type { Directive } from "@data/directives.data";

interface Props {
  directives: Directive[];
}

const { directives } = Astro.props;
---

<div class="grid grid-cols-1 gap-6 px-4 md:grid-cols-3">
  {directives.map((member) => <DirectiveCard member={member} />)}
</div>
